 package interviewquestions;

public class ReverseArray {

	public String revString() {
		String s1 = "Happy";
		String s2 = " ";
		int len = s1.length();

		for (int i = len - 1; i >= 0; i--) {
			s2 = s2 + s1.charAt(i);
		}
		System.out.println(s2);
		return s2;
	}

	public static void main(String[] args) {

		ReverseArray obj = new ReverseArray();
		obj.revString();

	}

}
