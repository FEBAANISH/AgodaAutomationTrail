package interviewquestions;

public class check {

	public static void main(String[] args) {

		String s = "Happy";
		StringBuffer b = new StringBuffer(s);
		//System.out.println(b.reverse());
		
		//without string buffer
		
		String rs= "";
		int len = s.length();
		for(int i = len-1; i>=0;i--)
		{
			rs= rs+s.charAt(i);
		}
		System.out.println(rs);
	}
}
