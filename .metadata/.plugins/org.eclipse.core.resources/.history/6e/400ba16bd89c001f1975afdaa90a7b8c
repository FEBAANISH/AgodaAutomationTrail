<?xml version="1.0" encoding="UTF-8"?>
<Configuration xmlns:xsi:noNamespaceSchemaLocation="https://logging.apache.org/log4j/2.24.1/schema/log4j2.xsd" 
               status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %-5p %c{1} - %m%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Root level="debug">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>