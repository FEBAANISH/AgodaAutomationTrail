package interviewPrepartion;

public class Wordoccurencerate {

	public static void main(String[] args) {
		String word ="hai hello java and java is simple";
		String[] split =word.split(" ");
		int count =0;
		String dup = " ";
		for(String e:split)
		{
			if(dup.contains(e))
			{
				count++;
			}
			dup=dup+e;
		}
		
		System.out.println(dup+":"+count);

	}

}
